{
  "name": "lumin-ui",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "lint-check": "prettier --check .",
    "lint-fix": "prettier --write .",
    "docs:dev": "vitepress dev packages/docs",
    "docs:build": "vitepress build packages/docs",
    "docs:serve": "vitepress serve packages/docs",
    "histoire:dev": "histoire dev --port=3005",
    "histoire:build": " histoire build",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/lumin-ui.umd.js",
  "module": "./dist/lumin-ui.es.js",
  "exports": {
    ".": {
      "import": "./dist/lumin-ui.es.js",
      "require": "./dist/lumin-ui.umd.js"
    }
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "autoprefixer": "^10.4.7",
    "histoire": "^0.4.6",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.13",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vitepress": "^0.22.4",
    "vitest": "^0.12.6",
    "vue-tsc": "^0.34.7"
  }
}
